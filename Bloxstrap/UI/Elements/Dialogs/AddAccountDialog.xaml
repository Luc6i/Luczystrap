<ui:UiWindow x:Class="Bloxstrap.UI.Elements.Dialogs.AddAccountDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             mc:Ignorable="d"
             Title="Add Roblox Account"
             Height="400"
             Width="600"
             WindowStartupLocation="CenterScreen"
             ResizeMode="NoResize"
             Background="{ui:ThemeResource ApplicationBackgroundBrush}"
             ExtendsContentIntoTitleBar="True"
             WindowBackdropType="Mica">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ui:TitleBar Grid.Row="0" Title="Add Roblox Account" Icon="pack://application:,,,/Bloxstrap.ico" />

        <StackPanel Grid.Row="1" Margin="20">
            <TextBlock Text="Enter Account Security Cookie" FontSize="18" FontWeight="Bold" Margin="0,0,0,12" />

            <TextBlock TextWrapping="Wrap" FontSize="13" Margin="0,0,0,8" Foreground="{DynamicResource TextFillColorSecondaryBrush}">
                Paste your .ROBLOSECURITY cookie value below. This cookie is used to authenticate your Roblox account.
            </TextBlock>

            <Border BorderThickness="1" 
                    BorderBrush="#FFA500"
                    Background="#22FFA500"
                    CornerRadius="4"
                    Padding="10"
                    Margin="0,0,0,12">
                <StackPanel Orientation="Horizontal">
                    <ui:SymbolIcon Symbol="Warning24" FontSize="18" Foreground="#FFA500" Margin="0,0,8,0" />
                    <TextBlock TextWrapping="Wrap" FontSize="12" Foreground="#FFA500" VerticalAlignment="Center">
                        Never share this cookie with anyone! It provides full access to your account.
                    </TextBlock>
                </StackPanel>
            </Border>

            <TextBlock Text="Security Cookie:" FontSize="13" Margin="0,0,0,4" Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
            <ui:TextBox x:Name="SecurityCookieTextBox"
                        Height="80"
                        TextWrapping="Wrap"
                        AcceptsReturn="True"
                        VerticalScrollBarVisibility="Auto"
                        PlaceholderText="Paste your .ROBLOSECURITY cookie here..."
                        Text="{Binding SecurityCookie, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

            <Expander Header="How to get your security cookie?" Margin="0,12,0,0">
                <StackPanel Margin="10">
                    <TextBlock Text="1. Open Roblox.com in your browser and log in" FontSize="12" Margin="0,0,0,6" />
                    <TextBlock Text="2. Press F12 to open Developer Tools" FontSize="12" Margin="0,0,0,6" />
                    <TextBlock Text="3. Click the 'Application' tab (Chrome) or 'Storage' tab (Firefox)" FontSize="12" Margin="0,0,0,6" />
                    <TextBlock Text="4. Expand 'Cookies' and select 'https://www.roblox.com'" FontSize="12" Margin="0,0,0,6" />
                    <TextBlock Text="5. Find the '.ROBLOSECURITY' cookie" FontSize="12" Margin="0,0,0,6" />
                    <TextBlock Text="6. Double-click the 'Value' column and copy it" FontSize="12" Margin="0,0,0,6" />
                    <TextBlock Text="7. Paste the value in the box above" FontSize="12" Margin="0,0,0,6" />
                </StackPanel>
            </Expander>
        </StackPanel>

        <Border Grid.Row="2" 
                BorderThickness="0,1,0,0" 
                BorderBrush="{DynamicResource ControlElevationBorderBrush}"
                Padding="20,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <ui:Button Grid.Column="1" 
                           Content="Add Account" 
                           Appearance="Primary"
                           Width="120"
                           Margin="0,0,8,0"
                           Click="AddButton_Click"
                           IsEnabled="{Binding IsValid}" />

                <ui:Button Grid.Column="2" 
                           Content="Cancel" 
                           Width="100"
                           Click="CancelButton_Click" />
            </Grid>
        </Border>
    </Grid>
</ui:UiWindow>